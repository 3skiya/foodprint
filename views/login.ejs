<!DOCTYPE html>
<html lang="en">
  <head>
      <% include ./partials/head %>  
  </head>
  <body>
   <!-- START: header -->

  <div class="probootstrap-loader"></div>

  <header role="banner" class="probootstrap-header">
      <% include ./partials/header %>
  </header>
  <!-- END: header -->

   <!-- START LOGIN FORM-->
   <div class="container" style="width: 100%;">
    <h3>USER LOGIN</h3>

    <div class="col-md-8">
      <% include ./partials/notificationbar %>
      <div class="probootstrap-section-heading text-center mb50 probootstrap-animate fadeInUp probootstrap-animated" style="background-image: url(/img/farm1.jpg); height: 200px; background-size: 100%; background-repeat: no-repeat; ">
        <h4 class="heading">Enter Your Details</h4>
      </div>

        <form class="probootstrap-form mb60 validate-form" method="post">
            <div class="form-group">
                <label for="loginUsername">Username</label>
                <input type="text" style="color: black;" id="loginUsername" name="loginUsername"class="form-control" placeholder="Enter Username" required autofocus/>
              </div>

              <div class="form-group">
                <label for="loginPassword">Password:</label>
                <input type="password" style="color: black;" id="loginPassword" name="loginPassword" class="form-control" placeholder="Enter Password" required>
              </div>

            <div class="form-group">
              <button class="btn btn-primary" type="submit" formaction="/app/auth/login">Login</button> <!-- Local Auth -->
            </div>
        </form>
      </div>
    </div>

   <!-- END LOGIN FORM-->

  <footer class="probootstrap-footer probootstrap-bg" style="background-image: url(/img/slider_3.jpg)">
    <% include ./partials/footer %>
  </footer>
